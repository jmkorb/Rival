    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="margin-bottom:20px;">
        <div class="container-fluid">
            <a class="navbar-brand" style="font-size:30px; margin-left:25px;" href="@Url.Action("Index", "Home")">Rival <img src="http://www.clker.com/cliparts/w/d/Y/M/v/G/tennis-rackets-hi.png" style="width:50px; margin-left:10px; margin-right:15px;"/></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
