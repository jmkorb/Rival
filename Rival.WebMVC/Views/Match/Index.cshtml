@model IEnumerable<Rival.Models.Matches.MatchListItem>

@{
    ViewBag.Title = "Index";
}

<div class="row" style="margin: 60px;">
    <div class="col-xs-6">
        <div class="card panel panel-default">
            <div class="panel-heading card-header" style="text-align:center; font-size: 20px;"><b>All Matches</b></div>
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Player One</th>
                            <th>Player Two</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model)
                        {
                            <tr>
                                <td style="text-align:center">
                                    <a style="color: #18bc9c;" href="@Url.Action("Details", "Match", new { id = match.MatchId })">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                            <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                            <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                                        </svg>
                                    </a>
                                </td>
                                <td>@match.PlayerOne.FullName</td>
                                <td>@match.PlayerTwo.FullName</td>
                                <td>@match.Date.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
