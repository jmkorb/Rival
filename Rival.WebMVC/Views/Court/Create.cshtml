@model Rival.Models.Courts.CourtCreate

@{
    ViewBag.Title = "Add Court";
}

<h2 class="text-center">Add A New Court</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin: 0 auto; width:750px;">
        <span></span>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Location
            <div class="col" style="margin: 10px 0 20px 0;">
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Condition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col" style="margin: 10px 0 20px 0;">
                @Html.EnumDropDownListFor(model => model.Condition, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Condition, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <button class="col-md-offset-2 col-md-10 btn btn-block btn-primary" style="width:750px;">
                <input type="button" value="Save" style="color: #fff" class="btn btn-default"/>
            </button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
